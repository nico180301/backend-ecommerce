<main class="container">
    <div class="form-container">
        <form id="productFormAdd">
            <h2>Ingresar producto</h2>

            <label for="name">Nombre</label>
            <input type="text" id="name" name="productName" required placeholder="Nombre del producto">

            <label for="price">Precio ($)</label>
            <input type="number" id="price" name="price" required placeholder="Precio del producto" min="0.01"
                step="0.01">

            <label for="stock">Stock</label>
            <input type="number" id="stock" name="stock" required placeholder="stock del producto" min="0">

            <label for="category">Categoría</label>
            <input type="text" id="category" name="category" required placeholder="Categoría del producto">

            <button type="submit" class="form-product-btn">Agregar</button>
        </form>
        <form id="productFormDel">
            <h2>Eliminar producto</h2>

            <label for="productId">Id del producto</label>
            <input type="text" id="productId" name="productId" placeholder="Id del producto">

            <button type="submit" class="form-product-btn">Eliminar</button>
        </form>
    </div>

    <div class="table-prod">
        <table id="productTable">
            <thead>
                <tr>
                    <th>ID del producto</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoría</th>
                </tr>
            </thead>
            <tbody id="productTableBody">
                <!-- Acá se mostrarán los productos -->
            </tbody>
        </table>
    </div>
</main>